<%= form_for(@responsable, :html => { :class => "form-horizontal" }) do |f| %>
<fieldset>
  <% if @responsable.errors.any? %>
    <div class="alert alert-error">
      <h2><%= pluralize(@responsable.errors.count, "erreur") %> ont été identifiées :</h2>

      <ul>
      <% @responsable.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label(:nom, :class => "control-label") %>
    <div class="controls">
      <%= f.text_field(:nom, :class => "input-xlarge") %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label(:invalide, :class => "control-label") %>
    <div class="controls">
      <label class="checkbox">
      <%= f.check_box(:invalide) %>
    </div>
  </div>

  <div class="form-actions">
    <% if current_page?(:action => "new") %>
      <%= f.submit("Créer le responsable", :class => "btn btn-primary") %>
	<% else %>
      <%= f.submit("Mettre à jour le responsable", :class => "btn btn-primary") %>
	<% end %>
    <%= link_to("Retour", responsables_path, :class => "btn") %>
  </div>
</fieldset>
<% end %>
